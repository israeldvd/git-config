[core]
	editor = Code --wait
[user]
	name = Israel Davi
[alias]
	lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
	lol = log --graph --decorate --pretty=oneline --abbrev-commit
	s = status -s
	st = status -sb
	last = log -1 HEAD --stat
	cm = commit -m
	rv = remote -v
	d = diff
	gl = config --global -l
	undo = reset --soft HEAD^
	ga = add
	gap = add -p
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	co = checkout
	ahead-commits = !git lola HEAD~1..${current_branch}
	dw = diff --color-words
	wd = dw
	lol3 = lol -3
	cam = commit --amend
	sw = switch
	swc = switch -c
[help]
	autocorrect = 50
[rebase]
	autoStash = true
